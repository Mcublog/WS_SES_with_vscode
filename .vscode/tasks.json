{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"label": "Build: debug",
			"command": "py",
			"args": [
				"colorize.py",
				"--command",
				"emBuild -config Debug -project ${config:ses_project} ${config:ses_project}.emProject -verbose"
			],
			"presentation": {
				"reveal": "always",
				"echo": false,
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Build: release",
			"command": "emBuild",
			"args": [
				"-config",
				"Release",
				"-project",
				"Ws_project",
				"Ws_project.emProject",
				"-verbose"
			],
			"presentation": {
				"reveal": "always",
				"echo": false
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Build: clean all",
			"command": "Remove-Item",
			"args": [
				"Output",
				"-Recurse",
				"-Force",
				"-Confirm:$false"
			],
			"presentation": {
				"reveal": "never",
				"echo": false
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}